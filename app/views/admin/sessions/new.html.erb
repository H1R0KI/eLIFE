<div class="h5 text-center mt-2"><%= flash[:notice] %></div>

<div class="container">
  <div class="row py-5">
    <div class="col-3"></div>

    <div class="col-6">
      <div class="border-bottom mb-3">
        <h4 class="font-weight-bold">管理者ログイン</h4>
      </div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <table class="table table-borderless">
          <tr>
            <td style="width: 60%">メールアドレス</td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>

          <tr>
            <td>パスワード</td>
            <td><%= f.password_field :password, autocomplete: "current-password" %></td>
          </tr>

          <tr>
            <td class="text-right pt-4 pb-2 btn-lg"><%= f.submit "ログイン", class: "px-2 btn-success rounded" %></td>
          </tr>
        </table>
      <% end %>
      <%= render "admin/shared/links" %>
    </div>
  </div>
</div>