<div class="h5 text-center mt-5"><%= flash[:notice] %></div>

<div class="container py-5 px-sm-0">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-10">
      <h4 class="font-weight-bold mb-4">登録ユーザー</h4>
      <table class="table table-hover">
      <% @members.each do |member| %>
        <% if member.name == "guestmember" %> <!--ゲストユーザーを一覧に表示しない為の分岐-->
        <% else %>
          <tr>
            <td class="text-center align-middle", style="width: 15%">
              <%= image_tag member.get_profile_image, size:"70x70" %></br>
              <%= link_to admin_member_path(member.id), class: "text-dark" do %>
                <%= member.name %>
              <% end %>
            </td>
            <td class="text-center align-middle", style="width: 15%">
              <% if member.is_deleted == false %>
                <strong><p class="text-success">有効</p></strong>
              <% elsif %>
                <strong><p class="text-secondary">退会</p></strong>
              <% end %>
            </td>
            <td class="align-middle">
              <%= member.introduction %>
            </td>
          </tr>
        <% end %>
      <% end %>
      </table>
    </div>
    <div class="col-1"></div>
  </div>
</div>