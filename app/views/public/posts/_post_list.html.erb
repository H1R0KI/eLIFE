<% @posts.each do |post| %>
<div class="card-deck mb-1">
  <div class="card">
    <div class="card-body">
      <h5><%= link_to post.title, post_path(post.id) %></h5>
      <p class="card-text"><%= post.body.truncate(50) %></p>
      <p class="card-text small">
        <%= image_tag post.member.get_profile_image, size:"20x20" %>
        <%= link_to post.member.name, member_path(post.member_id) %>
        <small class="text-muted"><%= post.created_at.strftime('%Y/%m/%d %H:%M') %></small>
        　<%= render 'public/favorites/favorite', post: post %>
        <% if post.member == current_member %>
        　<%= link_to "この投稿を削除", post_path(post.id), class: "text-danger", method: :delete %>
        <% end %>
      </p>
    </div>
  </div>
</div>
<% end %>