<p><%= flash[:notice] %></p>

<div class="container py-4 px-sm-0">
  <div class="row">
    <div class="col-3">
      <div class="h4 mt-2">タグ一覧</div>
      <% @tags.each do |tag| %>
        <li><%= link_to tag.name, tag_posts_path(tag.id) %> (<%= tag.posts.count %>)</li>
      <% end %>
    </div>

    <div class="col-9">
      <div class="h4 text-center border-bottom pb-2 mb-4"><i class="fas fa-tag"></i>&nbsp;<%= @tag.name %><span class="h5">に関連する投稿 全<%= @posts.count %>件</span></div>
      <%= render 'post_list', post: @posts %>
    </div>
  </div>
</div>