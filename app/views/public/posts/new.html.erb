<div class="container">
  <div class="row py-3">
    <div class="col-3"></div>

    <div class="col-6 pt-4">
      <%= render "error",obj: @post %>
      <div class="border-bottom border-dark">
        <h4 class="font-weight-bold">新規投稿</h4>
      </div>
      <%= form_with model: Post.new do |f| %>
        <div class="form-group pt-5 pb-2">
          <label for="title">タイトル</label>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group pb-2">
          <label for="title">ジャンル</label>
          <p>
            <%= f.select :genre, Post.genres.keys.map {|k| [I18n.t("enums.post.genre.#{k}"), k]} %>
          </p>
        </div>
        <div class="form-group pb-2">
          <label for="post-tag">タグ（コンマで区切ることで複数付けられます）</label>
          <p>
            <%= f.text_field :tag_name, placeholder: "例：サンプル,テスト,example", class: "form-control" %>
          </p>
        </div>
        <div class="form-group pb-2">
          <label for="body">説明</label>
          <%= f.text_area :body, rows: '4', class: "form-control" %>
        </div>
        <div class="form-group pb-4">
          <label for="image">画像</label>
          <p><%= f.file_field :image, multiple: true, accept: "image/*" %></p>
        </div>
        <div class="form-group text-center pt-2 btn-lg">
          <%= f.submit "投稿する", class: "px-2 btn-secondary rounded" %>
        </div>
        <div class="text-center small">
          <%= link_to "キャンセル", posts_path %>
        </div>
      <% end %>
    </div>
  </div>
</div>