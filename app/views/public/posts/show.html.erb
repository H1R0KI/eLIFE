<div class="container">
  <div class="row">
    <div class="col-3">
      <%= render 'public/members/member_info', tag: @tag %>
    </div>

    <div class="col-1"></div>

    <div class="col-8 mt-5">
      <p class="h1"><%= @post.title %></p>
      <span>
        タグ：
        <% @post_tags.each do |tag| %>
          <%= link_to tag.name, tag_posts_path(tag_id: tag.id) %>
        <% end %>
      </span></br>
      <small class="text-muted"><%= @post.created_at.strftime('%Y/%m/%d %H:%M') %></small></br>
      <div class="pt-5 pb-3">
        <%= @post.body %>
      </div>
      <div class="mb-3">
        <%= image_tag @post.get_image %>
      </div>
        <% if @post.member == current_member %>
          <div class="text-right">
            <%= link_to "編集する", edit_post_path(@post.id), class: "btn btn-sm btn-success" %>
            <%= link_to "削除", post_path(@post.id), method: :delete, class: "btn btn-sm btn-danger" %>
          </div>
        <% else %>
          <%= render 'public/favorites/favorite', post: @post %>
        <% end %>
      <div class="pt-5 border-bottom">
        コメント(<%= @post.post_comments.count %>)
      </div>
      <% @post.post_comments.each do |post_comment| %>
        <div class="border-bottom py-3">
          <div><%= post_comment.comment %></div>
          <div class="small">
            <%= image_tag post_comment.member.get_profile_image, class: "rounded-circle", size:"15x15"%>
            <%= link_to post_comment.member.name, member_path(post_comment.member_id) %>
          　<%= post_comment.created_at.strftime('%Y/%m/%d %H:%M') %>
            <% if post_comment.member == current_member %>
            　<%= link_to "削除", post_post_comment_path(post_comment.post, post_comment), method: :delete %>
            <% end %>
          </div>
        </div>
      <% end %>
      <div class="pt-2">
        <%= form_with model: [@post, @post_comment] do |f| %>
          <p><%= f.text_area :comment, rows: '2', placeholdaer: "ここにコメントを入力" %></p>
          <p><%= f.submit "コメントする" %></p>
        <% end %>
      </div>
    </div>
  </div>