<div class="h5 text-center pt-5"><%= flash[:notice] %></div>

<div class="container py-5 px-sm-0">
  <div class="row">
    <div class="col-4 pt-4">
      <% if member_signed_in? %>
        <%= render 'public/homes/my_profile' %>
      <% else %>
        <%= render 'public/homes/login_area' %>
      <% end %>
      <div class="pt-4 pl-5 ml-3">
        <h5 class="font-weight-bold pt-4 ml-3"><i class="fas fa-tag"></i>&nbsp;ジャンル一覧</h5>
        <%= render 'public/posts/genre_list' %>
      </div>
    </div>

    <div class="col-8">
      <div class="h4 font-weight-bold border-bottom pb-1 pl-3 mb-3">投稿一覧</div>
      <p>
        <%= link_to '新しい順', posts_path(latest: "true"), class: "text-dark" %>
        |<%= link_to '古い順', posts_path(old: "true"), class: "text-dark" %>
      </p>
      <%= render 'post_list', post: @posts %>
    </div>
  </div>
</div>