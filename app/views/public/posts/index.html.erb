<%= flash[:notice] %>

<div class="container py-5 px-sm-0">
  <div class="row">
    <div class="col-4 pt-4">
    <% if member_signed_in? %>
      <%= render 'public/homes/my_profile' %>
    <% else %>
      <%= render 'public/homes/login_area' %>
    <% end %>
      <div class="h4 text-center pt-5">
        ジャンル
      </div>
    </div>

    <div class="col-8">
      <div class="h4 font-weight-bold text-center border-bottom pb-3 mb-3">投稿一覧</div>
      <%= render 'post_list', post: @posts %>
    </div>
  </div>
</div>