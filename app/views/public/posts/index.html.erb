<div class="h5 text-center pt-5"><%= flash[:notice] %></div>

<div class="container py-5 px-sm-0">
  <div class="row">
    <div class="col-4 pt-4">
      <% if member_signed_in? %>
        <%= render 'public/homes/my_profile' %>
      <% else %>
        <%= render 'public/homes/login_area' %>
      <% end %>
      <div class="pt-4 pl-5 ml-3">
        <h5 class="font-weight-bold pt-4 ml-3"><i class="fas fa-tag"></i>&nbsp;タグ一覧</h5>
        <% @tags.each do |tag| %>
          <li class="ml-4 mb-1"><%= link_to tag.name, tag_posts_path(tag.id) %> (<%= tag.posts.count %>)</li>
        <% end %>
      </div>
    </div>

    <div class="col-8">
      <div class="h4 font-weight-bold text-center border-bottom pb-3 mb-3">投稿一覧 全<%= @posts.count %>件</div>
      <%= render 'post_list', post: @posts %>
    </div>
  </div>
</div>