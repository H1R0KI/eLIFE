<p><%= flash[:notice] %></p>
<div class="h2">投稿一覧</div>
<table class="table table-hover">
  <tr>
    <th></th>
    <th>タイトル</th>
    <th>説明</th>
    <th>画像</th>
    <th></th>
  </tr>

  <% @posts.each do |post| %>
  <tr>
    <td>
      <%= image_tag post.member.get_profile_image, size:"50x50"  %></br>
      <%= link_to post.member.name, member_path(post.member_id) %>
    </td>
    <td><%= link_to post.title, post_path(post.id) %></td>
    <td><%= post.body %></td>
    <td><%= image_tag post.get_image, size: "50x50" %></td>
    <td><%= render 'public/favorites/favorite', post: post %></td>
    <% if post.member == current_member %>
    <td><%= link_to "削除", post_path(post.id), method: :delete %></td>
    <% end %>
  </tr>
  <% end %>
</table>