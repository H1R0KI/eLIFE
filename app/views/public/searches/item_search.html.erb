<div class="text-center">
  <%= render 'public/searches/rakuten_search' %>
</div>
<div class="container">
  <div class="row py-5">
    <% if @items.present? %>
      <% @items.each do |item| %>
        <div class="card-deck mb-3">
          <div class="card mr-auto", style="width:15rem;">
            <div class="card-body", style="background-color: #f5f5f5;">
              <div class="text-center">
                <%= image_tag (item['smallImageUrls'][0]), size:"80x80" %>
              </div>
              <span class="small">
                <%= link_to item.name.truncate(40), "#{item.url}" %>
              </span></br>
              <div class="text-center text-danger">
                <%= number_with_delimiter(item.price) %>å††
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>