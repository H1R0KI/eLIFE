<div class="container">
  <div class="row py-3">
    <div class="col-3"></div>

    <div class="col-6 pt-4">
      <div class="border-bottom">
        <h4 class="font-weight-bold">ユーザー情報編集</h4>
      </div>
      <%= form_with model: @member do |f| %>
      <div class="form-group pt-5 pb-2">
        <label for="name">ハンドルネーム</label>
        <%= f.text_field :name, class: "form-control name" %>
      </div>
      <div class="form-group pb-1">
        <label for="member_image">プロフィール画像</label>
        <p><%= f.file_field :profile_image, accept: "image/*" %></p>
      </div>
      <div class="form-group pb-1">
        <label>世帯構成</label>
        <p><%= f.select :composition, Member.compositions.keys.map {|k| [I18n.t("enums.member.composition.#{k}"), k]}  %></p>
      </div>
      <div class="form-group pb-2">
        <label for="user_introduction">自己紹介</label>
        <%= f.text_area :introduction, rows: '4', class: "form-control introduciton" %>
      </div>
      <div class="form-group text-center pt-2 btn-lg">
        <%= f.submit "変更を保存", class: "x-2 btn-secondary rounded" %>
      </div>
      <% end %>
      <div class="text-center small">
        <%= link_to "キャンセル", member_path(@member.id) %>
      </div>
      <div class="text-center pt-5">
        <%= link_to "退会はこちら", member_quitcheck_path(@member.id), class: "text-danger" %>
      </div>
    </div>

    <div class="col-3"></div>
  </div>
</div>