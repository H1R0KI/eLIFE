<table class="table table-hover">
<% @members.each do |member| %>
  <tr>
    <td class="text-center align-middle", style="width: 15%">
      <%= image_tag member.get_profile_image, size:"70x70" %></br>
      <%= link_to member.name, member_path(member.id) %>
    </td>
    <td class="text-center align-middle", style="width: 15%">
      <% if current_member != member %>
        <%= render 'public/follows/follow', member: member %>
      <% else %>
        <%= link_to member_path(current_member), class: "font-weight-bold btn btn-sm btn-secondary rounded-pill" do %>
          マイページ
        <% end %>
      <% end %>
    </td>
    <td class="align-middle", style="width: 15%">
      　フォロー：<%= link_to member.followings.count, member_followings_path(member) %></br></br>
      フォロワー：<%= link_to member.followers.count, member_followers_path(member) %>
    </td>
    <td class="align-middle">
      <%= member.introduction %>
    </td>
  </tr>
<% end %>
</table>