<div class="container">
  <div class="row">
    <h3>登録情報</h3>
    <%= image_tag @member.get_profile_image, size:"200x200"  %>
    <table class="table table-hover">
      <tr>
        <th>ハンドルネーム</th>
        <td><%= @member.name %></td>
      </tr>

      <tr>
        <th>メールアドレス</th>
        <td><%= @member.email %></td>
      </tr>

      <tr>
        <th>年代</th>
        <td><%= @member.age_i18n %></td>
      </tr>

      <tr>
        <th>世帯構成</th>
        <td><%= @member.composition_i18n %></td>
      </tr>

      <tr>
        <th>自己紹介</th>
        <td><%= @member.introduction %></td>
      </tr>
    </table>
    <%= link_to edit_member_path(current_member.id), class: 'text-light' do %>
        <button class="btn btn-success" type="submit">編集する</button>
    <% end %>
    </div>
  </div>
</div>