<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-7">
      <div class="pt-5", id="member_<%= @member.id %>">
        <h2 class="text-center font-weight-bold">
          <% if @member == current_member %>
        　マイプロフィール
          <% else %>
          　ユーザープロフィール
          <% end %>
        </h5>
        <div class="text-center py-3"><%= image_tag @member.get_profile_image, class: "rounded-circle", size:"100x100"%></div>
        <p class="text-center h4 font-weight-bold"><%= @member.name %></p>
        <p class="text-center follow_btn">
          <% if @member.id == current_member.id %>
            <%= link_to edit_member_path(@member.id), class: "btn btn-secondary rounded-pill" do %>
              <i class="fas fa-user-cog"></i> 編集する
            <% end %>
          <% else %>
            <%= render 'public/follows/follow_btn', member: @member %>
          <% end %>
        </p>
        <table class="table">
          <tr>
            <th style="width: 20%">フォロー数</th>
            <td><%= link_to @member.followings.count, member_followings_path(@member) %></td>
          </tr>
          <tr>
            <th>フォロワー数</th>
            <td><%= link_to @member.followers.count, member_followers_path(@member) %></td>
          </tr>
          <tr>
            <th>年代</th>
            <td><%= @member.age_i18n %></td>
          </tr>
          <tr>
            <th>世帯構成</th>
            <td><%= @member.composition_i18n %></td>
          </tr>
          <tr>
            <th>自己紹介</th>
            <td><%= @member.introduction %></td>
          </tr>
        </table>
      </div>
    </div>

    <div class="col-1"></div>

    <div class="col-4 pt-5 border-left border-right">
      <div class="h4 text-center font-weight-bold">最新の投稿</div>
      <div class="small">
        <% @posts.first(3).each do |post| %>
        <div class="card-deck pb-1">
          <div class="card">
            <div class="card-body", style="background-color: #f5f5f5;">
              <div id="post_<%= post.id %>">
                <h5 class="pt-2"><%= link_to post.title, post_path(post.id) %></h5>
                <p class="card-text"><%= post.body.truncate(50) %></p>
                <p class="card-text small">
                  <%= image_tag post.member.get_profile_image, size:"20x20" %>
                  <%= link_to post.member.name, member_path(post.member_id) %>
                  <small class="text-muted"><%= post.created_at.strftime('%Y/%m/%d %H:%M') %></small>
                  <% if post.member == current_member %>
                    &nbsp;&nbsp;<%= link_to "削除", post_path(post.id), class: "text-danger text-right", method: :delete %>
                  <% end %>
                  <div class="text-right ">
                    <span class="favorite_btn">
                    <%= render 'public/favorites/favorite_btn', post: post %>
                    </span>
                    &emsp;<i class="fas fa-comment text-primary"></i> <%= post.post_comments.count %>
                  </div>
                </p>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
      <div class="text-right">
        <%= link_to "投稿一覧 >>", posts_member_path(@member), class: "text-dark" %></br>
        <%= link_to "いいね一覧 >>", favorites_member_path(@member), class: "text-dark" %>
      </div>
    </div>
  </div>
</div>