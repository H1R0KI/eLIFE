<div class="pt-5", id="member_<%= @post.member_id %>">
  <h5 class="text-center">投稿者プロフィール</h5>
    <p class="text-center pt-3"><%= image_tag @post.member.get_profile_image, class: "rounded-circle", size:"80x80"%></p>
    <p class="text-center"><%= link_to @post.member.name, member_path(@post.member_id) %></p>
    <p class="text-center follow_btn">
      <% if @post.member_id == current_member.id %>
        <%= link_to edit_member_path(@post.member.id), class: "btn btn-sm btn-secondary rounded-pill" do %>
          <i class="fas fa-user-cog"></i> 編集する
        <% end %>
      <% else %>
        <%= render 'public/follows/follow_btn', member: @post.member %>
      <% end %>
    </p>
    <table class="table">
      <tr>
        <th>フォロー数</th>
        <td><%= link_to @post.member.followings.count, member_followings_path(@post.member) %></td>
      </tr>
      <tr>
        <th>フォロワー数</th>
        <td><%= link_to @post.member.followers.count, member_followers_path(@post.member) %></td>
      </tr>
      <tr>
        <th>年代</th>
        <td><%= @post.member.age_i18n %></td>
      </tr>
      <tr>
        <th>世帯構成</th>
        <td><%= @post.member.composition_i18n %></td>
      </tr>

    </table>
</div>