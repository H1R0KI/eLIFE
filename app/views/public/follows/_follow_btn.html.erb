<% if current_member.following?(member) %>
  <%= link_to "フォロー中", member_follows_path(member.id), method: :delete, remote: true, class: "font-weight-bold btn btn-sm btn-outline-dark rounded-pill" %>
<% else %>
  <%= link_to "フォローする", member_follows_path(member.id), method: :post, remote: true, class: "font-weight-bold btn btn-sm btn-dark rounded-pill"  %>
<% end %>